<tbody data-hook="order_details_avalara_tax_adjustments">
  <% order.line_item_adjustments.avalara_tax.eligible.group_by(&:label).each do |label, adjustments| %>
  <tr class="total">
    <td><%= label %></td>
    <td><%= Spree::Money.new(adjustments.sum(&:amount), currency: order.currency).to_html %></td>
  </tr>
  <% end %>
  <% order.all_adjustments.where(adjustable_type: "Spree::Shipment").avalara_tax.eligible.group_by(&:label).each do |label, adjustments| %>
  <tr class="total">
    <td><%= label %></td>
    <td><%= Spree::Money.new(adjustments.sum(&:amount), currency: order.currency).to_html %></td>
  </tr>
  <% end %>
</tbody>